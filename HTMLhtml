    <script>
        // ---------------------------------
        // 核心：时间线滚动侦测 (Intersection Observer)
        // ---------------------------------
        
        document.addEventListener('DOMContentLoaded', () => {
            
            // 获取所有需要侦测的“步骤”
            const steps = document.querySelectorAll('.timeline-step');
            
            // 获取所有左侧的“视觉元素”
            const visuals = document.querySelectorAll('.timeline-visual');
            
            // 获取左侧的容器、圆点和时钟
            const stickyContainer = document.getElementById('sticky-container');
            const timelineDot = document.getElementById('timeline-dot');
            const timelineClock = document.getElementById('timeline-clock');
            
            let lastTime = ''; // 用于防止重复触发

            // 1. 创建一个侦测器
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach(entry => {
                        // 当一个 "step" 元素进入视口（超过 50% 可见）时
                        if (entry.isIntersecting) {
                            
                            // 从 data-* 属性中获取时间和圆点位置
                            const time = entry.target.dataset.time;
                            const dotPos = entry.target.dataset.dotPos;
                            
                            // 确保我们不会重复激活同一个元素
                            if (time === lastTime) return;
                            lastTime = time;

                            // 更新时钟
                            timelineClock.textContent = time;

                            // 更新圆点位置
                            timelineDot.style.top = dotPos;

                            // 切换左侧的“暗/亮”模式
                            if (time === '21:00' || time === '24:00') {
                                stickyContainer.classList.add('is-dark');
                            } else {
                                stickyContainer.classList.remove('is-dark');
                            }
                            
                            // 切换激活的视觉元素
                            // (1) 隐藏所有视觉元素
                            visuals.forEach(v => v.classList.remove('active'));
                            
                            // (2) 仅显示对应的视觉元素
                            // (例如 time '08:00' 对应 id 'vis-0800')
                            const id = `vis-${time.replace(':', '')}`;
                            const activeVisual = document.getElementById(id);
                            if(activeVisual) {
                                activeVisual.classList.add('active');
                            }
                        }
                    });
                }, 
                {
                    // 阈值：当元素 50% 可见时触发
                    threshold: 0.5 
                }
            );

            // 2. 让侦测器“监视”每一个 step 元素
            steps.forEach(step => {
                observer.observe(step);
            });
        });

    </script>

<!-- Code injected by live-server -->
<script>
	// <![CDATA[  <-- For SVG support
	if ('WebSocket' in window) {
		(function () {
			function refreshCSS() {
				var sheets = [].slice.call(document.getElementsByTagName("link"));
				var head = document.getElementsByTagName("head")[0];
				for (var i = 0; i < sheets.length; ++i) {
					var elem = sheets[i];
					var parent = elem.parentElement || head;
					parent.removeChild(elem);
					var rel = elem.rel;
					if (elem.href && typeof rel != "string" || rel.length == 0 || rel.toLowerCase() == "stylesheet") {
						var url = elem.href.replace(/(&|\?)_cacheOverride=\d+/, '');
						elem.href = url + (url.indexOf('?') >= 0 ? '&' : '?') + '_cacheOverride=' + (new Date().valueOf());
					}
					parent.appendChild(elem);
				}
			}
			var protocol = window.location.protocol === 'http:' ? 'ws://' : 'wss://';
			var address = protocol + window.location.host + window.location.pathname + '/ws';
			var socket = new WebSocket(address);
			socket.onmessage = function (msg) {
				if (msg.data == 'reload') window.location.reload();
				else if (msg.data == 'refreshcss') refreshCSS();
			};
			if (sessionStorage && !sessionStorage.getItem('IsThisFirstTime_Log_From_LiveServer')) {
				console.log('Live reload enabled.');
				sessionStorage.setItem('IsThisFirstTime_Log_From_LiveServer', true);
			}
		})();
	}
	else {
		console.error('Upgrade your browser. This Browser is NOT supported WebSocket for Live-Reloading.');
	}
	// ]]>
</script>
